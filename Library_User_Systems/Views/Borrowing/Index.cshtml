@model IEnumerable<Library_User_Systems.Models.BorrowRecord>
@{
	ViewData["Title"] = "My Borrowed Books";
}

<h1>My Borrowed Books</h1>

<table class="table table-bordered">
	<thead>
	<tr>
		<th>Book ID</th>
		<th>Borrow Date</th>
		<th>Due Date</th>
		<th>Actions</th>
	</tr>
	</thead>
	<tbody>
	@foreach (var record in Model)
	{
		<tr>
			<td>@record.Book?.Title</td>
			<td>@record.BorrowDate.ToShortDateString()</td>
			<td>@record.DueDate.ToShortDateString()</td>
			<td>
				<form asp-action="Return" asp-route-id="@record.Id" method="post" onsubmit="return confirm('Are you sure you want to return this book?');">
					<button type="submit" class="btn btn-warning">Return</button>
				</form>
			</td>
		</tr>
	}
	</tbody>
</table>

<a asp-action="Borrow" class="btn btn-success">Borrow a New Book</a>