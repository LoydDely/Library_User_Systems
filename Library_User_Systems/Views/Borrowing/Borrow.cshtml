@model Library_User_Systems.Models.BorrowRecord
@{
	ViewData["Title"] = "Borrow a Book";
}

<h1>Borrow a Book</h1>

<form asp-action="Borrow" method="post">
	@Html.AntiForgeryToken()

	<div asp-validation-summary="All" class="text-danger"></div>

	<div class="form-group">
		<label for="BookId">Select Book</label>
		<select name="BookId" class="form-control">
			<option value="">-- Select a Book --</option>
			@foreach (var book in (IEnumerable<SelectListItem>)ViewBag.BookList)
			{
				<option value="@book.Value">@book.Text</option>
			}
		</select>
		<span asp-validation-for="BookId" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary">Confirm Borrow</button>
</form>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}